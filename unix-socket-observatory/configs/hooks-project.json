{
  "_comment": "Claude Code Hooks Observatory (Unix Socket) - Project configuration. Copy to .claude/settings.json. Socket /tmp/claude-observatory.sock is default.",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s --connect-timeout 2 --max-time 5 --unix-socket /tmp/claude-observatory.sock -X POST -H 'Content-Type: application/json' -d @- 'http://localhost/hook?event=SessionStart' || true"
          }
        ]
      }
    ],
